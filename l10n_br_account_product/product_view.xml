<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

        <record model="ir.ui.view" id="view_product_code_tree">
            <field name="name">Product code (tree)</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock.view_stock_product_template_tree"/>
            <field name="arch" type="xml">
                <data>
                    <field name="name" position="before">
                       <field name="default_code" />
                    </field>
                </data>
            </field>
        </record>

       	<record model="ir.ui.view" id="l10n_br_account_product_fiscal_classification_form_view">
            <field name="name">l10n_br_account_product_fiscal_classification_form_view</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="account_product_fiscal_classification.product_fiscal_classification_product_normal_form_view"/>
            <field name="arch" type="xml">
				<field name="property_fiscal_classification" position="replace">
				</field>
            </field>
        </record>

		<record id="l10n_br_account_product_template_form" model="ir.ui.view">
			<field name="name">l10n_br_account_product.product.template.form</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="l10n_br_account.l10n_br_account_product_template_form_view"/>
			<field name="arch" type="xml">
				<field name="fiscal_category_default_ids" position="before">
					<group string="Dados Fiscais" position="inside" col="2">
						<group>
							<field name="fiscal_type" required="1"/>
							<field name="origin" attrs="{'required': [('fiscal_type', '=', 'product')]}" />
						</group>
						<group>
							<field name="ncm_id" attrs="{'required': [('fiscal_type', '=', 'product')]}" on_change="ncm_id_change(ncm_id, taxes_id, supplier_taxes_id, context)" domain="[('type', '=', 'normal')]"/>
							<field name="service_type_id" attrs="{'invisible': [('fiscal_type', '=', 'product')], 
								'required': [('fiscal_type', '=', 'service')]}" domain="[('internal_type', '=', 'normal')]"/>
						</group>	
					</group>
                    <group string="Dados Fiscais de Importação">
                        <field name="fci"/>
                    </group>
				</field>
			</field>
		</record>
	</data>
</openerp>
